CREATE TABLE POKEMONS.CARTAS
(
    ID          SERIAL        PRIMARY KEY
  , NAME        VARCHAR(300)  NOT NULL
  , STATUS      VARCHAR(300)  NOT NULL

);


INSERT INTO pokemons.CARTAS (NAME, STATUS)
VALUES  ('Charmander', 'ativo');


ALTER TABLE pokemons.CARTAS RENAME ID_NAME TO ID;


CREATE TABLE pokemons.ATTRIBUTES
(
    HP                  INT           NOT NULL
  , ATTACK              INT           NOT NULL
  , DEFENSE             INT           NOT NULL
  , SPECIAL_ATACK       INT           NOT NULL
  , SPECIAL_DEFENSE     INT           NOT NULL
  , SPEED               INT           NOT NULL

) inherits (pokemons.cartas);


INSERT INTO pokemons.ATTRIBUTES (NAME, STATUS, HP, ATTACK, DEFENSE, SPECIAL_ATACK, SPECIAL_DEFENSE, SPEED)
VALUES  ('Meowtw', 'ativo', 3, 3, 3, 3, 3, 6);

